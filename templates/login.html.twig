{% extends 'base.html.twig' %}

{% block body %}
<form method="post" action="{{ path('login') }}" >
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
    <div class="form-label">Email</div>
    <input name="_username" type="email" placeholder="Entrez votre email" value="{{ last_username }}" required >
    <div class="form-label">Mot de passe</div>
    <input name="_password" type="password" placeholder="Entrez votre mot de passe" required >

    <div class="form-element">
        <span class="text-red-600">
            {% if error %}
            {{ error.messageKey|trans(error.messageData, 'security') }}
            {% endif %}
        </span>
    </div>
    <input type="submit" value="Se connecter" >
</form>
{% endblock %}

