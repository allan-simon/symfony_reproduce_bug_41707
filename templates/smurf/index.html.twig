{% extends 'base.html.twig' %}

{% block title %}Smurf index{% endblock %}

{% block body %}
    <h1>Smurf index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for smurf in smurves %}
            <tr>
                <td>{{ smurf.id }}</td>
                <td>{{ smurf.name }}</td>
                <td>
                    <a href="{{ path('smurf_show', {'id': smurf.id}) }}">show</a>
                    <a href="{{ path('smurf_edit', {'id': smurf.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('smurf_new') }}">Create new</a>
{% endblock %}
